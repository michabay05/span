import "std.um";

type Vec2 = struct { x, y: real32 };
type Color = struct { r, g, b, a: uint8 };
type Id = int16;

type Rect = struct {
    id: Id;
    position, size: Vec2;
    color: Color
};

ObjInterface = interface {
    get_kind(): ObjKind
}

fn (r: ^Rect) set_position(p: Vec2) {
    r.position = p;
}

fn (r: ^Rect) set_size(s: Vec2) {
    r.size = s;
}

fn (r: ^Rect) set_color(c: Color) {
    r.color = c;
}
